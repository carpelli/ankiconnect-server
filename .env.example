# Server settings
ANKICONNECT_HOST=127.0.0.1
ANKICONNECT_PORT=8765

# API key for authentication (keep this secret!)
# If not set, no authentication is required
ANKICONNECT_API_KEY=your-api-key

# CORS origins (comma-separated)
ANKICONNECT_CORS_ORIGINS=http://localhost,http://127.0.0.1:3000

# Path to the direcory with your Anki collection (collection.anki2)
ANKI_BASE_DIR=

# Sync credentials. Use `python -m app.keygen` to generate
# Defaults to AnkiWeb if SYNC_ENDPOINT is not set
SYNC_USER=
SYNC_KEY=
# SYNC_ENDPOINT=

# Debug mode
LOGLEVEL="INFO"